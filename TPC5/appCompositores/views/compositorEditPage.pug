extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Compositor Edit Form
        
    
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=compositor.id required readonly)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=compositor.nome required)
                label Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" value=compositor.dataNasc required)
                label Data de Óbito
                input.w3-input.w3-round(type="date" name="dataObito" value=compositor.dataObito required)
                label(for="periodos") Período:
                select.w3-select(id="periodos" name="periodo" required)
                    option(value=compositor.periodo ) #{nomePeriodo}
                    - for(let i = 0;i<listaPeriodos.length;i++)
                        - let periodo = listaPeriodos[i]
                        - if (periodo.id != compositor.periodo)
                            option(value=periodo.id selected) #{periodo.nome}



                
            fieldset 
                label Bio        
                input.w3-input.w3-round(type="text" name="bio" value=compositor.bio required)
                    
            br
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Edit
                

        footer.w3-container.w3-teal.w3-center
            address 
                span Gerado por galuno::RPCW2022 em #{date} - [
                a(href="/") Voltar
                span ]
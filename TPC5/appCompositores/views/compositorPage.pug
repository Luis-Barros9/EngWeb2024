extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Compositor #{compositor.id}
            

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li
                    b Nome: 
                    span #{compositor.nome}
                li
                    b Data de Nascimento: 
                    span #{compositor.dataNasc}
                li
                    b Data de Óbito:  
                    span #{compositor.dataObito}
                li
                    b Período (link):
                    a(href="/periodos/" + compositor.periodo) #{periodo.nome}
                     
                
            
        .w3-container.w3-margin-8
            h2 Biografia
            p #{compositor.bio}
            
        footer.w3-container.w3-teal.w3-center
            address 
                span Gerado por galuno::RPCW2022 em #{date} - [
                a(href="/") Voltar
                span ]
                      
            

extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Compositor Form
        
    
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" required)
                label Name
                input.w3-input.w3-round(type="text" name="nome" required)
                label Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" required)
                label Data de Óbito
                input.w3-input.w3-round(type="date" name="dataObito" required)
                label(for="periodos") Período:
                select.w3-select(id="periodos" name="periodo" required)
                    option(value="" disabled selected) Choose your Period
                    each periodo in listaPeriodos
                        option(value=periodo.id)= periodo.nome


                
            fieldset 
                label Bio        
                input.w3-input.w3-round(type="text" name="bio" required)
                    
            br
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Register
                

        footer.w3-container.w3-teal.w3-center
            address 
                span Gerado por galuno::RPCW2022 em #{date} - [
                a(href="/") Voltar
                span ]
                
            
            